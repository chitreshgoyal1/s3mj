<div class="middle-box text-center loginscreen  animated fadeInDown">
    <div>
        <div>
            <h1 class="logo-name">S3JM</h1>
        </div>
        <h3>Welcome to Shree Shyam Sharan Ji Maharaj</h3>
        <p>
            Contact <a href="http://bhavishy.com" target="_blank"> Bhavishy Technology</a> 
        </p>
        <p>To make an account.</p>
        	<%= form_for resource, as: resource_name, url: registration_path(resource_name), :html => {:class=>"m-t",:role=>"role"} do |f| %>
				<%= devise_error_messages! %>
			
	            <div class="form-group">
					<%= f.text_field :username, :class=> "form-control", :placeholder=>"Username", :required=> true, autofocus: true %>
	            </div>
	            <div class="form-group">
	                <%#= f.email_field :email, :class=> "form-control", :placeholder=>"Email", :required=> true %>
	            </div>
	            <% if @minimum_password_length %>
				    		<em>(<%= @minimum_password_length %> characters minimum)</em>
				    	<% end %><br />
				<div class="form-group">    	
				    	<%= f.password_field :password, :class=> "form-control", :placeholder=>"Password", :required=> true, autocomplete: "off" %>
		    	</div>
				<div class="form-group">
					    <%#= f.password_field :password_confirmation, :class=> "form-control", :placeholder=>"Confirm Password", :required=> true, autocomplete: "off" %>
				</div>	    
	            		<%#= f.submit "Sign up", :class=>"btn btn-primary block full-width m-b" %>
			<% end %>
            
            <p class="text-muted text-center"><small>Existing user?</small></p>
            <%= render "devise/shared/links" %>

            <%= render "devise/shared/footer" %>
    </div>
</div>



