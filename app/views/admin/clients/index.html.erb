<div class="wrapper wrapper-content">
<div class="row animated fadeInRight">

  <div class="col-md-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>List All Clients (<%= @admin_clients.count %>)
              <small>Please add atleast 3/6/9/12 clients. Because it will be displayed on home page of website.</small>
            </h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        
        <% @admin_clients.each do |admin_client| %>
          <div class="ibox-content">
              <div>
                  <div class="feed-activity-list">

                      <div class="feed-element">
                        <small class="text-muted">
                          Created at: <%= admin_client.created_at.strftime(" %I : %M %p - %A, %d %b ( %Y )") %><br>
                          Updated at: <%= admin_client.updated_at.strftime(" %I : %M %p - %A, %d %b ( %Y )") %>
                        </small>
                      </div>

                      <div class="feed-element">
                        <div class="media-body ">
                              <strong>Client Pic</strong> <br>
                              <div class="well">
                                <img alt="image" class="img-responsive" src="<%= admin_client.clientpic_url(:thumb) %>">
                              </div>
                          </div>
                      </div>

                      <div class="feed-element">
                        <div class="media-body ">
                              <strong>Name</strong> <br>
                              <div class="well">
                                <%= admin_client.name.humanize %>
                              </div>
                          </div>
                      </div>

                      <div class="feed-element">
                          <div class="media-body ">
                              <strong>Trust Percentage</strong> <br>
                              <div class="well">
                                <%= admin_client.trustper %>
                              </div>
                          </div>
                      </div>

                      <div class="feed-element">
                          <div class="media-body ">
                              <strong>Feedback:</strong> <br>
                              <div class="well">
                                <%= admin_client.feedback.humanize %>
                              </div>
                          </div>
                      </div>

                      <div class="feed-element">
                          <div class="media-body ">
                              <strong>Client Contact Details:</strong> <br>
                              <div class="well">
                                <%= admin_client.contact_details.humanize %>
                              </div>
                          </div>
                      </div>


                      <div class="feed-element">
                          <div class="media-body ">
                            <%= link_to 'Edit', edit_admin_client_path(admin_client), :class=>"btn btn-primary" %>
                            <%= link_to 'Destroy', admin_client, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %>
                          </div>
                      </div>                    
                              
                  </div>
              </div>
          </div>
        <% end %>


    </div>
  </div><!-- col-md-8 -->
</div>

</div>