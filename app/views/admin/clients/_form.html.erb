<div class="ibox-content">
<%= form_for(@admin_client, :html=>{multipart: true, :class=>'form-horizontal', :role=>'form'}) do |f| %>
  <% if @admin_client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_client.errors.count, "error") %> prohibited this admin_client from being saved:</h2>

      <ul>
      <% @admin_client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :name, :class=>"form-control", :placeholder=>'Client Name' %></div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
    <%= f.label :clientpic, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-2">
      <div class="ibox float-e-margins">
      <div class="ibox-content no-padding border-left-right">
            <img alt="image" class="img-responsive" src="<%= f.object.clientpic.url %>">
      </div>
      </div>
    </div>
    <div class="col-sm-8">
      <%= f.file_field :clientpic, :class=>"form-control" %>
    </div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
    <%= f.label "Trust Percentage", :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :trustper, :class=>"form-control", :placeholder=>'90%' %></div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
    <%= f.label :feedback, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_area :feedback, :class=>"form-control", :rows=>'5' %></div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
    <%= f.label :contact_details, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :contact_details, :class=>"form-control" %>
      <span class="help-block m-b-none">
        Provide Client Contact Details To Make Website More Turstable and Reliable.
      </span>
    </div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
      <div class="col-sm-4 col-sm-offset-2">
          <button class="btn btn-white" type="submit">Cancel</button>
          <%= f.submit "Save Changes", :type=>"submit", :class=>"btn btn-primary" %>
      </div>
  </div>

<% end %>
</div>