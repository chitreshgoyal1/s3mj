<div class="wrapper wrapper-content">
<div class="row animated fadeInRight">

  <div class="col-md-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>List: All Configurations</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        
        <% @admin_about_mes.each do |admin_about_me| %>
          <div class="ibox-content">
              <div>
                  <div class="feed-activity-list">

                      <div class="feed-element">
                        <small class="text-muted">
                          Created at: <%= admin_about_me.created_at.strftime(" %I : %M %p - %A, %d %b ( %Y )") %><br>
                          Updated at: <%= admin_about_me.updated_at.strftime(" %I : %M %p - %A, %d %b ( %Y )") %>
                        </small>
                      </div>

                      <div class="feed-element">
                        <div class="media-body ">
                              <strong>Story Picture</strong> <br>
                              <div class="well">
                                <img alt="image" class="img-responsive" src="<%= admin_about_me.storypic.url(:custom) %>">
                              </div>
                          </div>
                      </div>

                      <div class="feed-element">
                        <div class="media-body ">
                              <strong>Story Title</strong> <br>
                              <div class="well">
                                <%= admin_about_me.story_title.humanize %>
                              </div>
                          </div>
                      </div>

                      <div class="feed-element">
                          <div class="media-body ">
                              <strong>Story</strong> <br>
                              <div class="well">
                                <%= admin_about_me.story %>
                              </div>
                          </div>
                      </div>

                      <div class="feed-element">
                          <div class="media-body ">
                              <strong>Progress Bar Title:</strong> <br>
                              <div class="well">
                                <%= admin_about_me.progressbar_title.humanize %>
                              </div>
                          </div>
                      </div>

                      <div class="feed-element">
                          <div class="media-body ">
                              <strong>Progress Bar Description:</strong> <br>
                              <div class="well">
                                <%= admin_about_me.progressbar_description.humanize %>
                              </div>
                          </div>
                      </div>

                      <div class="feed-element">
                          <div class="media-body ">
                            <%= link_to 'Edit', edit_admin_about_me_path(admin_about_me), :class=>"btn btn-primary" %>
                            <%= link_to 'Destroy', admin_about_me, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %>
                          </div>
                      </div>                    
                              
                  </div>
              </div>
          </div>
        <% end %>


    </div>
  </div><!-- col-md-8 -->
</div>

</div>