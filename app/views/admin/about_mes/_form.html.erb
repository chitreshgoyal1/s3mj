<div class="ibox-content">
<%= form_for(@admin_about_me, :html=>{multipart: true, :class=>'form-horizontal', :role=>'form'}) do |f| %>
  <% if @admin_about_me.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_about_me.errors.count, "error") %> prohibited this admin_about_me from being saved:</h2>

      <ul>
      <% @admin_about_me.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :storypic, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-2">
      <div class="ibox float-e-margins">
      <div class="ibox-content no-padding border-left-right">
            <img alt="image" class="img-responsive" src="<%= f.object.storypic.url %>">
      </div>
      </div>
    </div>
    <div class="col-sm-8">
      <%= f.file_field :storypic, :class=>"form-control" %>
    </div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
    <%= f.label :story_title, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :story_title, :class=>"form-control" %></div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
    <%= f.label :story, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_area :story, :class=>"form-control" %></div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
    <%= f.label :progressbar_title, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :progressbar_title, :class=>"form-control" %></div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
    <%= f.label :progressbar_description, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_area :progressbar_description, :class=>"form-control" %></div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
      <div class="col-sm-4 col-sm-offset-2">
          <button class="btn btn-white" type="submit">Cancel</button>
          <%= f.submit "Save Changes", :type=>"submit", :class=>"btn btn-primary" %>
      </div>
  </div>
  
<% end %>
</div>