<div class="ibox-content">
<%= form_for(@admin_gallery, :html=>{multipart: true, :class=>'form-horizontal', :role=>'form'}) do |f| %>

  <% if @admin_gallery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_gallery.errors.count, "error") %> prohibited this admin_gallery from being saved:</h2>

      <ul>
      <% @admin_gallery.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :title, :class=>"form-control", :placeholder=>'Image Title' %></div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
    <%= f.label :pic, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-2"><%= image_tag f.object.pic.url(:small)%></div>
    <div class="col-sm-8"><%= f.file_field :pic, :class=>"form-control" %></div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
      <div class="col-sm-4 col-sm-offset-2">
          <button class="btn btn-white" type="submit">Cancel</button>
          <%= f.submit "Save Changes", :type=>"submit", :class=>"btn btn-primary" %>
      </div>
  </div>
<% end %>
</div>