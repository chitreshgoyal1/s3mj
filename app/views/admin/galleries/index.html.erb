<div class="wrapper wrapper-content">
<div class="row animated fadeInRight">
<div class="col-md-12">
<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h5>List: Events Page</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    
    <% @admin_galleries.each do |admin_gallery| %>
      <div class="col-md-3 no-padding">
      <div class="ibox-content">
        <div class="feed-activity-list">
            
          <div class="feed-element">
            <div class="media-body ">
              <div class="well">
                <small class="text-muted">
                Created at: <%= admin_gallery.created_at.strftime(" %I:%M %p - %d %b,%Y") %><br>
                Updated at: <%= admin_gallery.updated_at.strftime(" %I:%M %p - %d %b,%Y") %>
                </small>

                <%= link_to admin_gallery do %>
                    <img alt="image" class="img-responsive" src="<%= admin_gallery.pic.url(:small) %>">
                <% end %>
                <strong><%= admin_gallery.title.humanize %></strong>
              </div>
            
              <%= link_to 'Edit', edit_admin_gallery_path(admin_gallery), :class=>"btn btn-primary" %>
              <%= link_to 'Destroy', admin_gallery, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %>
            </div>
          </div>    
        </div>
      </div>
      </div>
    <% end %>

</div>
</div><!-- col-md-12 -->
</div>
</div>