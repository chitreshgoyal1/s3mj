<div class="ibox-content">
<%= form_for(@admin_event, :html=>{multipart: true, :class=>'form-horizontal', :role=>'form'}) do |f| %>
  <% if @admin_event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_event.errors.count, "error") %> prohibited this admin_event from being saved:</h2>

      <ul>
      <% @admin_event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :eventpic, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-2">
      <div class="ibox float-e-margins">
      <div class="ibox-content no-padding border-left-right">
            <img alt="image" class="img-responsive" src="<%= f.object.eventpic.url %>">
      </div>
      </div>
    </div>
    <div class="col-sm-8">
      <%= f.file_field :eventpic, :class=>"form-control" %>
      <%= f.hidden_field :eventpic_cache %>
    </div>
    <span class="help-block m-b-none">For details page image will be cropped automatically, in 730 x 470 px.</span>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
    <%= f.label :title, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_area :title, :class=>"form-control", :rows=>'2' %></div>
  </div>
  <div class="hr-line-dashed"></div>
  
  <div class="form-group">
    <%= f.label :description, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_area :description, :class=>"form-control", :rows=>'4' %></div>
  </div>
  <div class="hr-line-dashed"></div>
  
  <div class="form-group" id="data_5">
      <%= f.label 'Event Date', :class=>"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <div class="input-daterange input-group" id="datepicker">
          <%= f.text_field :event_date_from, class: "form-control", :value=>@start_date, "data-mask" => "99/99/9999", :placeholder=>"mm/dd/yyyy", :required => true %>
          <span class="input-group-addon">to</span>
          <%= f.text_field :event_date_to, class: "form-control", :value=>@end_date, "data-mask" => "99/99/9999", :placeholder=>"mm/dd/yyyy", :required => true %>
        </div>
      </div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">    
      <label class="col-sm-2 control-label">Start Time </label>
      <div class="col-sm-3">
        <div class="input-group clockpicker" data-autoclose="true">
      <%= f.text_field :start_time, class: "form-control", :value=>@start_time, :placeholder=>"HH:MM" %>
              <span class="input-group-addon">
                  <span class="fa fa-clock-o"></span>
              </span>
        </div>
      </div>
         
      <label class="col-sm-2 control-label">End Time </label>
      <div class="col-sm-3">
        <div class="input-group clockpicker" data-autoclose="true">
          <%= f.text_field :end_time, class: "form-control", :value=>@end_time, :placeholder=>"HH:MM" %>
              <span class="input-group-addon">
                  <span class="fa fa-clock-o"></span>
              </span>
        </div>
    </div>
  </div>
  <div class="hr-line-dashed"></div>


  <div class="form-group">
    <%= f.label :location, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_area :location, :class=>"form-control" %></div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
    <%= f.label :summery, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_area :summery, :class=>"form-control", :rows=>'10' %></div>
  </div>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
      <div class="col-sm-4 col-sm-offset-2">
          <button class="btn btn-white" type="submit">Cancel</button>
          <%= f.submit "Save Changes", :type=>"submit", :class=>"btn btn-primary" %>
      </div>
  </div>

<% end %>


